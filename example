# PYTHONPATH=src python example  xx

import click.decorators
from click.plus.extension import configure
from click.plus.extension.base import ExtensionBase


class X(ExtensionBase):
    def setup(self, fn, arguments):
        return super(X, self).setup(fn, arguments)

    def process(self, kwargs, arguments):
        return super(X, self).process(kwargs, arguments)


@click.decorators.command()
@click.decorators.argument("option")
@configure(["x"], arguments={"wow":1})
def main(option):
    print("Got", option)


if __name__ == "__main__":
    main()
